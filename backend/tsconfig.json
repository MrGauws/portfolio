{
  "compilerOptions": {
    "target": "es2016",                         // Modern JS-standard
    "module": "commonjs",                       // För Node.js-kompatibilitet
    "rootDir": "src",                           // Här ligger dina .ts-filer
    "outDir": "dist",                           // Hit kompileras dina .js-filer
    "esModuleInterop": true,                    // Importera CommonJS-moduler snyggt
    "forceConsistentCasingInFileNames": true,   // Säkerställer importkonsistens
    "strict": true,                             // Aktiverar strikt typkontroll
    "skipLibCheck": true                        // Skippa typkontroll på .d.ts i node_modules
  },
  "include": ["src"],                           // Inkludera bara din kod
  "exclude": ["node_modules", "dist"]           // Exkludera bygg- och beroendemappar
}
